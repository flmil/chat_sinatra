<div>
	<h2><%= @namerooms.roomname %></h2>
	<form action="/new/message" method="post">
		<div>
			<div>
				<input type="text" name="body">
			</div>
			<div>
				<input type="hidden" name="room_id" value="<%= @namerooms.id %>">
			</div>
			<div>
				<input type="hidden" name="username" value="<%= @user.id%>">
			<div>
				<input type="submit" value="Transmission">
			</div>
		</div>
	</form>
	<div>
		<% @message.order('id DESC').each do |message| %>
			<ul>
				<li><%= message.username %></li>
				<li><%= message.body %></li>
			</ul>
		<% end %>
	</div>
</div>
